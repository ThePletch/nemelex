.col-lg-4.col-sm-6.card-wrapper{id: "card-#{card.id}"}
  .card{data: {id: card.id, "always-draw" => card.always_draw.to_s }}
    .card-block
      %h4.card-title.text-center= card.name
      .card-text.freeform= card.description
    .card-footer
      %button.btn.btn-primary.discard Discard
      %button.btn.btn-secondary.restore Restore
